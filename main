<body>
  <div id="banner">
    Welcome to our verification platform. A sleek and secure way to confirm your humanity.
  </div>
  <button id="verifyBtn">Click me to verify</button>

  <div id="adModal" class="modal">
    <div class="modal-content">
      <button id="closeAd" class="close-btn" title="Close">&times;</button>
      <h2 style="color: #e74c3c;">Advertisement!</h2>
      <p style="color: #7f8c8d;">This is a sponsored ad. Discover amazing products for your lifestyle.</p>
      <p style="color: #34495e;">Thank you for your attention and happy viewing!</p>
    </div>
  </div>

  <div id="choiceModal" class="modal">
    <div class="modal-content">
      <button id="closeChoice" class="close-btn" title="Close">&times;</button>
      <h2 style="color: #2ecc71;">Choose Your Verification Method</h2>
      <div>
        <button id="watchAdBtn" class="option-btn">Watch a Video Ad</button>
        <button id="visitBtn" class="option-btn">Visit Another Website</button>
      </div>
    </div>
  </div>

  <div id="actionModal" class="modal">
    <div class="modal-content">
      <div id="videoContainer">
        <iframe
          id="videoIframe"
          src=""
          title="Advertisement Video"
          allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share"
          allowfullscreen
          referrerpolicy="strict-origin-when-cross-origin"
        ></iframe>
      </div>
      <p id="message" style="color: #3498db;"></p>
      <span id="timer"></span>
    </div>
  </div>

  <script>
    let clickCount = 0;
    let timerInterval;

    const verifyBtn = document.getElementById('verifyBtn');
    const adModal = document.getElementById('adModal');
    const choiceModal = document.getElementById('choiceModal');
    const actionModal = document.getElementById('actionModal');
    const timerDisplay = document.getElementById('timer');
    const message = document.getElementById('message');
    const videoContainer = document.getElementById('videoContainer');
    const videoIframe = document.getElementById('videoIframe');

    function showModal(modal) {
      modal.style.display = 'flex';
    }

    function hideModal(modal) {
      modal.style.display = 'none';
      clearInterval(timerInterval);
      videoContainer.style.display = 'none';
      videoIframe.src = '';
      timerDisplay.textContent = '';
      message.textContent = '';
    }

    function startTimer(seconds, callback) {
      let remaining = seconds;
      updateTimer(remaining);
      timerInterval = setInterval(() => {
        remaining--;
        updateTimer(remaining);
        if (remaining <= 0) {
          clearInterval(timerInterval);
          callback();
        }
      }, 1000);
    }

    function updateTimer(seconds) {
      timerDisplay.textContent = `Time remaining: ${seconds} seconds`;
    }

    verifyBtn.addEventListener('click', () => {
      clickCount++;
      if (clickCount % 3 === 0) {
        showModal(adModal);
      }
      showModal(choiceModal);
    });

    document.getElementById('closeAd').addEventListener('click', () => hideModal(adModal));
    document.getElementById('closeChoice').addEventListener('click', () => hideModal(choiceModal));

    document.getElementById('watchAdBtn').addEventListener('click', () => {
      hideModal(choiceModal);
      showModal(actionModal);
      videoContainer.style.display = 'block';
      // Embed the YouTube video with autoplay enabled
      videoIframe.src =
        'https://www.youtube.com/embed/cqjavar4A7w?autoplay=1&controls=1&rel=0&modestbranding=1';
      message.textContent = 'Watching a video advertisement... Please wait.';
      startTimer(30, () => {
        window.location.href = 'https://www.google.com';
      });
    });

    document.getElementById('visitBtn').addEventListener('click', () => {
      hideModal(choiceModal);
      showModal(actionModal);
      videoContainer.style.display = 'none';
      videoIframe.src = '';
      message.textContent = 'Redirecting to another website for verification... Please wait.';
      startTimer(60, () => {
        window.location.href = 'https://www.google.com';
      });
    });
  </script>
</body>
</html>

